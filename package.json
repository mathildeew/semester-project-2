{
  "name": "semester-project-2",
  "version": "0.1.3",
  "description": "Semester project 2, spring 2023",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "watch": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/js/**/*.js",
    "test-unit": "jest",
    "test-cypress": "cypress open",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/js/**/*.js --cache --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathildeew/semester-project-2.git"
  },
  "author": "Mathilde Elinor Wiik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mathildeew/semester-project-2/issues"
  },
  "homepage": "https://mathildeew.github.io/semester-project-2/",
  "dependencies": {
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "cypress": "^10.7.0",
    "eslint": "^8.34.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.2.0",
    "lint-staged": "^13.1.2",
    "live-server": "^1.2.2",
    "prettier": "^2.8.4",
    "sass": "^1.58.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "mjs",
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/?(*.)test.?js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cypress/"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "\\.pnp\\.[^\\/]+$"
    ]
  }
}
